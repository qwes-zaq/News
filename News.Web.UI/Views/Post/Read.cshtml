@model PostReadVM


<div class="single-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="sn-container">
                    <div class="sn-img">
                        <img src=@Model.PhotoPath alt="Card image cap">
                    </div>
                    <div class="sn-content">
                        <h1>@Model.PostTitle</h1>

                        @Html.Raw(@Model.PostBody)
                        <p>
                            @Model.AuthorName
                            <hr>
                            @Model.Date
                            <hr>
                            View count: @Model.ViewCount
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <h2 class="sw-title">In This Category</h2>
                        <div class="news-list">
                            @foreach (var i in Model.PostList)
                            {
                                <a asp-action="Read" asp-route-Id="@i.PostId" asp-route-language="">
                                    <div class="nl-item">
                                        <div class="nl-img">
                                            <img src=@i.PhotoPath />
                                        </div>
                                        <div class="nl-title">
                                            <a href="">@i.PostTitle</a>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>



                    <div class="sidebar-widget">
                        <h2 class="sw-title">Tags Cloud</h2>
                        <div class="tags">
                            @foreach (var i in Model.TagList)
                            {
                                <a asp-controller="Tag" asp-action="PostList" asp-route-id="@i.TagId">@i.TagTitle</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

