@model List<PostVM>

<h2>Post List</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Language</th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.PostTitle</td>
            <td>@i.CategoryName</td>
            <td>@i.LanguageCode</td>

            <td></td>

            <td><a asp-action="Edit" asp-route-id="@i.PostId"><i class='fas fa-pencil-alt' style='font-size:24px'></i></a></td>
        </tr>
    }
</table>
<a asp-action="Create">
    <i class='fas fa-plus' style='font-size:36px'></i>
</a>