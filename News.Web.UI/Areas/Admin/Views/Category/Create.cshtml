@model CategoryCreateVM


<h4>Category Create</h4>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <select asp-for="@Model.LanguageId" asp-items="@Model.LanguagesList"></select>
    <hr>

    <label asp-for="@Model.Slug"></label><br />
    <input class="form-control" asp-for="@Model.Slug" />
    <span asp-validation-for="@Model.Slug"></span>

    <label asp-for="@Model.Title"></label><br />
    <input class="form-control" asp-for="@Model.Title" />
    <span asp-validation-for="@Model.Title"></span>

    <label asp-for="@Model.Description"></label><br />
    <input class="form-control" asp-for="@Model.Description" />
    <span asp-validation-for="@Model.Description"></span>
    <br>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>


