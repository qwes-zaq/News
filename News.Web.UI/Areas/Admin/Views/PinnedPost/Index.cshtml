            <td>@i.CategoryName</td>
            <td>@i.PostId</td>

            <td>
                <form asp-area="Admin" asp-controller="PinnedPost" asp-action="Pin" method="post">


                    <input type="hidden" name="postId" value="@i.PostId" />
                    <input type="submit" value="Pin" class="btn btn-primary" />

                 </form>
                    
                @*<form action="@Url.Action("Pin", "PinnedPost")/@i.PostId" method="post">

