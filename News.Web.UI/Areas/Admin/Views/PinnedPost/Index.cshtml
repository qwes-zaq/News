@model PostListVM

<table class="table">
    <tr>
        <th>Name</th>
        <th>Category</th>

    </tr>

    @foreach (var i in Model.PinnedPostList)
    {
        <tr>
            <td>@i.PostTitle</td>
            <td>@i.CategoryName</td>
            <td>@i.PostId</td>


            <td>
                <form asp-area="Admin" asp-controller="PinnedPost" asp-action="UnPin" method="post">


                    <input type="hidden" name="postId" value="@i.PostId" />
                    <input type="submit" value="Unpin" class="btn btn-danger" />

                </form>
